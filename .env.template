# Zerodha Kite API Credentials
# Get these from https://kite.zerodha.com/
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=

# Trading Configuration
TRADING_MODE=paper  # paper or live
CAPITAL=100000  # Starting capital in INR

# Risk Management
MAX_RISK_PER_TRADE=2  # Maximum risk per trade as % of capital
MAX_DAILY_LOSS=5  # Maximum daily loss as % of capital
MAX_OPEN_POSITIONS=5  # Maximum number of open positions

# Data Configuration
DATA_SOURCE=yfinance  # yfinance, nsepy, or kite
HISTORICAL_DATA_DAYS=365

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database (Optional)
DATABASE_URL=sqlite:///data/trading.db
